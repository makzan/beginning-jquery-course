<style>
  ul.card-list {
    list-style: none;
  }
</style>
<h1><%= course_name %> Course</h1>

<ul class='card-list'>
  <% cids = data.courses[course_name].split(',') %>
  <% cids.each do |id| %>
    <% article = sitemap.where(cid: id.to_i).first %>
    <li>
      <% if !article.data.icon.nil? %>
        <%= "\xF0\x9F\x93\xA2" if article.data.icon == 'annoncement' %>
        <%= "&#x1F4D6;" if article.data.icon == 'notes' %>
        <%= "\xE2\x9C\x8F" if article.data.icon == 'exercise' %>
        <%= "\xF0\x9F\x92\xA1" if article.data.icon == 'explore' %>
        <%= "\xF0\x9F\x93\x8E" if article.data.icon == 'link' %>
      <% end %>

      <%= link_to article.title, article %>
      <% if !article.data.summary.nil? %>
        â€”<%= article.data.summary %>
      <% end %>

    </li>
  <% end %>
</ul>

